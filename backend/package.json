{
    "name": "tradepulse-backend",
    "version": "1.0.0",
    "description": "Production-ready Node.js backend for TradePulse real-time trading analytics platform",
    "type": "module",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest --coverage",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "test:watch": "jest --watch",
        "migrate": "node db/index.js migrate",
        "migrate:rollback": "node db/index.js rollback",
        "seed": "node db/index.js seed",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "keywords": [
        "trading",
        "analytics",
        "graphql",
        "timescaledb",
        "kafka",
        "real-time"
    ],
    "author": "TradePulse Team",
    "license": "MIT",
    "dependencies": {
        "@apollo/server": "^4.10.0",
        "@authzed/authzed-node": "^0.12.0",
        "@graphql-tools/merge": "^9.0.0",
        "@graphql-tools/schema": "^10.0.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.0",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.0",
        "graphql": "^16.8.0",
        "graphql-ws": "^5.14.0",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "kafkajs": "^2.2.4",
        "lodash-es": "^4.17.21",
        "node-cron": "^3.0.3",
        "pg": "^8.11.0",
        "uuid": "^9.0.0",
        "winston": "^3.11.0",
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.0",
        "prettier": "^3.2.0",
        "supertest": "^6.3.0"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=9.0.0"
    }
}